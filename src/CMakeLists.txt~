cmake_minimum_required(VERSION 2.8)
include(FRCDeploy)

project(RobotLua)
find_package(WPILib)
include_directories(${WPILib_INCLUDE_DIRS} lua)

file(GLOB_RECURSE SOURCE_CODE *.cpp *.c *.cxx)

add_executable(LuaRobot ${SOURCE_CODE})
target_link_libraries(LuaRobot ${WPILib_LIBRARY})

add_make_deploy(LuaRobot 10.44.99.2)